        <td width="50%"><%= user.email %> </td>
      </tr>
      <tr>
          <td width="50%">Username</td>
          <td width="50%"><%= user.username %> </td>
      </tr>
      <tr>
          <td width="50%">Password</td>
          <td width="50%"><%= user.password %> </td>
      </tr>
      <tr>
          <td width="50%">Gender</td>
          <td width="50%"><%= user.gender %> </td>
      </tr>
      <tr>
        <td width="50%">Profile Picture</td>
        <td width="50%"><%= user.image %> </td>
    </tr>
	</table>

  </body>
</html>