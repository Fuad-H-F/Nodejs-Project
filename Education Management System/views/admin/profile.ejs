            <li><a href="/course/approvefaculty"> Approve faculty</a></li>
            <li><a href="/course/show">Show</a> </li>
          </ul>
        </li>
        <li> <a>Faculty</a> 
          <ul>
            <li><a href="/faculty/add"> Add</a></li>
            <li><a href="/faculty/show">Show</a> </li>
          </ul>
        </li>
        <li><a>Student </a>
            <ul>
              <li><a href="/student/add"> Add</a></li>
              <li><a href="/student/show">Show</a> </li>
            </ul>
          </li>
          <li><a href="/logout"> Logout </a></li>             
      </ul>
    </div>
    <br><br>
    <h1 align="center" style="color:white;">Profile</h1>
  	<table style="color:white;background:#000033 ;" cellpadding="10" border="1" align="center" >
    <tr style="background:#669900;">
      <td width="50%">Information</td>
      <td width="50%">Value </td>
    </tr>
    <tr>
      <td width="50%">First Name</td>
			<td width="50%"><%= user.fname %> </td>
    </tr>
    <tr>
        <td width="50%">Last Name</td>
        <td width="50%"><%= user.lname %> </td>
    </tr>
    <tr>
        <td width="50%">Mobile</td>
        <td width="50%"><%= user.mobile %> </td>
    </tr>
		<tr>
